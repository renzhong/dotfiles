[column]
    ui = auto

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[credential]
	helper = store

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
    tool = vimdiff

[push]
    autoSetupRemote = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[help]
    autocorrect = prompt

[core]
    editor = ~/bin/vim

[difftool]
    prompt = false

[alias]
    st = status
    co = checkout
    br = branch
    ca = commit --amend
    ci = commit
    logg = log --graph --oneline --decorate
    d  =  difftool
